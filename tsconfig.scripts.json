{
  "compilerOptions": {
    "target": "es2016",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@prisma/client/generated": [
        "./packages/database/src/generated/client"
      ]
    }
  },
  "include": ["scripts/**/*.ts", "src/lib/db/**/*.ts"],
  "exclude": ["node_modules"]
}