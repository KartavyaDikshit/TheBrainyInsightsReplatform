{
  "name": "thebrainyinsights-replatform",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "db:generate": "cd packages/database && pnpm db:generate",
    "db:push": "npx pnpm exec dotenv -e .env.local -- cd packages/database && npx pnpm db:push",
    "clean:all": "rd /s /q node_modules packages\\\\database\\\\node_modules .next 2>nul & del pnpm-lock.yaml 2>nul",
    "fresh-install": "pnpm run clean:all && pnpm install --no-frozen-lockfile"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^1.0.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@tbi/database": "workspace:*",
    "@types/bcryptjs": "^3.0.0",
    "bcryptjs": "^3.0.2",
    "cuid": "^3.0.0",
    "lru-cache": "^10.0.0",
    "next": "15.0.3",
    "next-auth": "^4.0.0",
    "openai": "4.20.0",
    "pg": "^8.11.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "redis": "^4.0.0",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/react": "18.2.45",
    "@types/react-dom": "18.2.18",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "autoprefixer": "10.4.16",
    "eslint": "8.56.0",
    "eslint-config-next": "14.0.0",
    "postcss": "8.4.32",
    "tailwindcss": "3.4.0",
    "tsx": "4.6.0",
    "typescript": "5.3.3"
  },
  "pnpm": {
    "overrides": {
      "next": "15.0.3",
      "react": "18.2.0",
      "react-dom": "18.2.0",
      "@next/env": "15.0.3",
      "@next/swc-darwin-arm64": "15.0.3",
      "@next/swc-linux-x64-gnu": "15.0.3",
      "@next/swc-win32-x64-msvc": "15.0.3"
    }
  },
  "resolutions": {
    "next": "15.0.3"
  }
}
