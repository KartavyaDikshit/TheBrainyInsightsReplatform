{
  "name": "thebrainyinsights-replatform",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "pnpm --filter @tbi/database db:generate",
    "db:push": "pnpm --filter @tbi/database db:push",
    "db:migrate": "pnpm --filter @tbi/database db:migrate",
    "db:studio": "pnpm --filter @tbi/database db:studio",
    "postinstall": "pnpm db:generate"
  },
  "dependencies": {
    "@tbi/database": "workspace:*",
    "next": "15.0.3",
    "next-auth": "^4.24.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "15.0.3",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0"
  }
}